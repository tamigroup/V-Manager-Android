<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tami.vmanager">

    <!--相机权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--写入SD卡的权限：如果你希望保存相机拍照后的照片-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--读取SD卡的权限:打开相册选取图片所必须的权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.GuidePageActivity"
            android:theme="@style/AppTheme.NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--    登录页   -->
        <activity android:name=".activity.LoginActivity"></activity>
        <!--    忘记密码    -->
        <activity android:name=".activity.ForgetThePasswordActivity"></activity>
        <!--    主页面    -->
        <activity
            android:name=".activity.HomeActivity"
            android:launchMode="singleTask"></activity>
        <!--    搜索功能    -->
        <activity android:name=".activity.SearchActivity"></activity>
        <!--    首页的创建会议    -->
        <activity android:name=".activity.CreateMeetingActivity"></activity>
        <!--    会议概览    -->
        <activity android:name=".activity.MeetingOverviewActivity"></activity>
        <!--    会议服务内容流程    -->
        <activity android:name=".activity.ConferenceServiceContentActivity"></activity>
        <!--    会议流程    -->
        <activity android:name=".activity.MeetingFlowActivity"></activity>
        <!--    会议流程编辑    -->
        <activity android:name=".activity.MeetingFlowEditActivity"></activity>
        <!--    会议环节待确认    -->
        <activity android:name=".activity.MeetingLinkConfirmedActivity"></activity>
        <!--    会议服务群    -->
        <activity android:name=".activity.ConferenceServiceGroupActivity"></activity>
        <!--    进入会议    -->
        <activity android:name=".activity.EnterMeetingActivity"></activity>
        <!--    进入会议    -->
        <activity android:name=".activity.SponsorMemberActivity"></activity>
        <!--    帐号设置    -->
        <activity android:name=".activity.AccountSettingsActivity"></activity>
        <!--    图片裁剪    -->
        <activity android:name=".activity.ClipPictureActivity"></activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.tami.vmanager.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="pub.devrel.easypermissions.AppSettingsDialogHolderActivity"
            android:exported="false"
            android:label=""
            android:theme="@style/EasyPermissions.Transparent"/>
    </application>

</manifest>