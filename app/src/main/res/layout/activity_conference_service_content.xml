<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/csc_contract_amount"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:drawableRight="@mipmap/right_triangle"
            android:gravity="center_vertical"
            android:text="@string/contract_amount"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/csc_contract_amount_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:background="@color/color_EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_contract_amount" />

        <TextView
            android:id="@+id/csc_number_of_participants"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:drawableRight="@mipmap/right_triangle"
            android:gravity="center_vertical"
            android:text="@string/number_of_participants"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_contract_amount_line" />

        <View
            android:id="@+id/csc_number_of_participants_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:background="@color/color_EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_number_of_participants" />

        <TextView
            android:id="@+id/csc_flow_chart"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:drawableRight="@mipmap/right_triangle"
            android:gravity="center_vertical"
            android:text="@string/flow_chart"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_number_of_participants_line" />

        <View
            android:id="@+id/csc_flow_chart_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:background="@color/color_EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_flow_chart" />

        <TextView
            android:id="@+id/csc_vip_reception_information"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:drawableRight="@mipmap/right_triangle"
            android:gravity="center_vertical"
            android:text="@string/vip_reception_information"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_flow_chart_line" />

        <View
            android:id="@+id/csc_vip_reception_information_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:background="@color/color_EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_vip_reception_information" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csc_vip_reception_information_line">

            <TextView
                android:id="@+id/csc_meeting_is_important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/meeting_is_important"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tami.vmanager.view.SwitchButton
                android:id="@+id/csc_switchbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sb_background="@android:color/white"
                app:sb_button_color="@android:color/white"
                app:sb_checked="true"
                app:sb_checked_color="@color/default_bg"
                app:sb_show_indicator="false" />

            <TextView
                android:id="@+id/csc_important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/important"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/csc_switchbtn"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/csc_upload_eo_list"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/upload_eo_list"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</android.support.constraint.ConstraintLayout>