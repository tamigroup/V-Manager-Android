<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_23"
    android:layout_marginBottom="@dimen/dp_8">

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:30"
        android:textSize="@dimen/sp_14"
        android:drawableLeft="@mipmap/time_gray"
        android:drawablePadding="@dimen/dp_5"
        android:textColor="@color/color_CACACA"
        android:layout_marginLeft="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_CACACA"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="12131213"
        app:layout_constraintStart_toEndOf="@+id/item_time"/>
    <TextView
        android:id="@+id/item_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_CACACA"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/item_name"/>
    <TextView
        android:id="@+id/item_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_CACACA"
        android:text="@string/no_confirmed"
        android:drawableRight="@mipmap/icon_ok_gray"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>