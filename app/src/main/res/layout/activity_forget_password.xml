<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:padding="@dimen/dp_20">


    <TextView
        android:id="@+id/forget_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_the_password"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forget_password_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/forget_the_password_prompt"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_title" />

    <TextView
        android:id="@+id/forget_password_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:text="@string/phone_number"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/forget_password_prompt"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_prompt" />

    <EditText
        android:id="@+id/forget_password_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/forget_password_name"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_name" />

    <TextView
        android:id="@+id/forget_password_again_identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/again_identification"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/forget_password_value"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_value" />

    <EditText
        android:id="@+id/forget_password_again_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword"
        android:lines="1"
        android:maxLength="16"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/forget_password_again_identification"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_again_identification" />

    <Button
        android:id="@+id/forget_password_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sent_verification_code"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/forget_password_again_password"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_again_password" />


</android.support.constraint.ConstraintLayout>