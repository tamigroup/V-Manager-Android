<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.AppCompatImageView
        android:id="@id/titleLeftBtn"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:scaleType="center"
        android:src="@mipmap/return_btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forget_password_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_95"
        android:text="@string/forget_the_password"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forget_password_prompt"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/forget_the_password_prompt"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="@+id/forget_password_title"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_title" />

    <TextView
        android:id="@+id/forget_password_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        android:text="@string/phone_number"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_prompt"
        app:layout_goneMarginTop="@dimen/dp_100" />

    <TextView
        android:id="@+id/forget_password_recapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recapture"
        app:layout_constraintBottom_toBottomOf="@+id/forget_password_name"
        app:layout_constraintEnd_toEndOf="@+id/forget_password_title"
        app:layout_constraintTop_toTopOf="@+id/forget_password_name" />

    <EditText
        android:id="@+id/forget_password_value"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_888888"
        app:layout_constraintEnd_toEndOf="@+id/forget_password_title"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_name" />


    <EditText
        android:id="@+id/forget_password_password"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword"
        android:lines="1"
        android:maxLength="16"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_888888"
        app:layout_constraintEnd_toEndOf="@+id/forget_password_title"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_value" />

    <TextView
        android:id="@+id/forget_password_again_identification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/again_identification"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_password" />

    <EditText
        android:id="@+id/forget_password_again_password"
        android:layout_width="@dimen/dp_0"
        android:layout_height="49dp"
        android:inputType="textVisiblePassword"
        android:lines="1"
        android:maxLength="16"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_888888"
        app:layout_constraintEnd_toEndOf="@+id/forget_password_title"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_again_identification" />

    <Button
        android:id="@+id/forget_password_confirm_btn"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/color_319CFF"
        android:text="@string/next_step"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toEndOf="@+id/forget_password_title"
        app:layout_constraintStart_toStartOf="@+id/forget_password_title"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_again_password"
        app:layout_goneMarginTop="@dimen/dp_30" />

</android.support.constraint.ConstraintLayout>