<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@android:color/white">

    <View
        android:id="@+id/item_time_top_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_0"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:background="@color/color_34DB8E"
        app:layout_constraintBottom_toTopOf="@+id/item_time_bottom_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />


    <View
        android:id="@+id/item_time_bottom_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_0"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:background="@color/color_34DB8E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_time_top_line"
        app:layout_constraintVertical_weight="1" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_time_middle_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_time_top_line"
        app:layout_constraintStart_toStartOf="@+id/item_time_top_line"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/middle_pic_selected" />

    <TextView
        android:id="@+id/item_time_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_time_state"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/item_time_state"
        android:gravity="center"
        android:text="已确认"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_time_line"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:background="@color/default_bg"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_time_content" />

</android.support.constraint.ConstraintLayout>
