<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/title_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_white_line"
        android:gravity="center_vertical|left"
        android:hint="@string/required_title"
        android:paddingLeft="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/content_edit"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_white_line"
        android:gravity="top|left"
        android:hint="@string/required_content"
        android:padding="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/title_edit" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/zhiding_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_21"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_edit">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/top_display"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tami.vmanager.view.SwitchButton
            android:id="@+id/agen_switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sb_background="@color/color_888888"
            app:sb_button_color="@android:color/white"
            app:sb_checked="true"
            app:sb_checked_color="@color/color_FF5657"
            app:sb_show_indicator="false" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>