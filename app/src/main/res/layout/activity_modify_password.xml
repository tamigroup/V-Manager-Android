<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/amp_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/amp_old_password"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:text="@string/old_password"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@+id/amp_guideline"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/amp_old_password_edit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:hint="@string/please_add_old_password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:textColor="@color/color_303030"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/amp_old_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/amp_guideline"
            app:layout_constraintTop_toTopOf="@+id/amp_old_password" />


        <TextView
            android:id="@+id/amp_old_password_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:background="@color/color_EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amp_old_password" />

        <TextView
            android:id="@+id/amp_new_password"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:text="@string/new_password"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@+id/amp_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amp_old_password_line" />

        <EditText
            android:id="@+id/amp_new_password_edit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:hint="@string/please_add_new_password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:textColor="@color/color_303030"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/amp_new_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/amp_guideline"
            app:layout_constraintTop_toTopOf="@+id/amp_new_password" />

        <TextView
            android:id="@+id/amp_new_password_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="1px"
            android:background="@color/color_EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amp_new_password" />

        <TextView
            android:id="@+id/amp_new_password1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical"
            android:text="@string/confirm_password"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@+id/amp_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amp_new_password_line" />

        <EditText
            android:id="@+id/amp_new_password_edit1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:hint="@string/please_add_new_password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:textColor="@color/color_303030"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/amp_new_password1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/amp_guideline"
            app:layout_constraintTop_toTopOf="@+id/amp_new_password1" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/amp_forget_old_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:text="@string/forget_old_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

</android.support.constraint.ConstraintLayout>