        <!--<TextView-->
            <!--android:id="@+id/search_history_tv6"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/dp_25"-->
