<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/acsf_meeting_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/acsf_title_time"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/time"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@+id/acsf_title_name"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acsf_meeting_name" />

    <TextView
        android:id="@+id/acsf_title_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/service_flow"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@+id/acsf_title_contacts"
        app:layout_constraintHorizontal_weight="1.5"
        app:layout_constraintStart_toEndOf="@+id/acsf_title_time"
        app:layout_constraintTop_toBottomOf="@+id/acsf_meeting_name" />

    <TextView
        android:id="@+id/acsf_title_contacts"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/contacts"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@+id/acsf_title_mobile_phone"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/acsf_title_name"
        app:layout_constraintTop_toBottomOf="@+id/acsf_meeting_name" />

    <TextView
        android:id="@+id/acsf_title_mobile_phone"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/telephone"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1.5"
        app:layout_constraintStart_toEndOf="@+id/acsf_title_contacts"
        app:layout_constraintTop_toBottomOf="@+id/acsf_meeting_name" />

    <ListView
        android:id="@+id/acsf_listview"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="8dp"
        android:divider="@color/color_EAEAEA"
        android:dividerHeight="1px"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acsf_title_time" />

</android.support.constraint.ConstraintLayout>