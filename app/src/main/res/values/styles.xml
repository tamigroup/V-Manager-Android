<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.NoBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TabLayoutTextStyle1">
        <item name="android:textSize">@dimen/sp_15</item>
    </style>


    <style name="TitleLayoutStyle">
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TitleNameStyle">
        <item name="android:id">@id/titleName</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="titleLeftBtnStyle">
        <item name="android:id">@id/titleLeftBtn</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:scaleType">center</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:src">@mipmap/return_btn</item>
    </style>

    <style name="titleRightBtnStyle">
        <item name="android:id">@id/titleRightBtn</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="titleRightTxtStyle">
        <item name="android:id">@id/titleRightTxt</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toLeftOf">@id/titleRightBtn</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>       <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item>      <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>    <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>       <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null
        </item>  <!-- 也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">false</item>  <!-- 背景是否模糊显示 -->
    </style>

    <!--    创建会议    -->
    <style name="CreateMeetingNameTxt">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_303030</item>
        <item name="android:gravity">center_vertical</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CreateMeetingInput">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_303030</item>
        <item name="android:textColorHint">@color/color_888888</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="CreateMeetingLine">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:background">@color/color_EAEAEA</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CreateMeetingItemTitle">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_303030</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="SearchTv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/shape_cricle_gray_line</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="style_pop_animation">
        <item name="android:windowEnterAnimation">@anim/anim_pop_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_out</item>
    </style>

    <style name="ModifyMeetingInput">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_3B89E9</item>
        <item name="android:textColorHint">@color/color_888888</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

</resources>
